<%= render :partial => 'spree/admin/shared/order_tabs', :locals => { :current => 'Return Authorizations' } %>

<% content_for :page_title do %>
  - <%= t(:new_return_authorization) %>
<% end %>

<% content_for :page_actions do %>
  <%= button_link_to t(:back_to_return_authorizations_list), spree.admin_order_return_authorizations_url, :icon => 'icon-arrow-left', :class => 'btn' %>
<% end %>

<%= render :partial => 'spree/shared/error_messages', :locals => { :target => @return_authorization } %>
<%= form_for [:admin, @order, @return_authorization] do |f| %>
  <fieldset class="no-border-top">
    <%= render :partial => 'form', :locals => { :f => f } %>

    <div class="form-actions" data-hook="buttons">
      <%= button t(:continue), 'btn btn-large btn-primary' %>
      <span class="or"><%= t(:or) %></span>
      <%= button_link_to t(:cancel), admin_order_return_authorizations_url(@order), :icon => 'icon-remove', :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
